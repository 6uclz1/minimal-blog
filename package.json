{
    "name": "minimal-blog",
    "version": "1.0.0",
    "scripts": {
        "dev": "tsx watch src/index.tsx",
        "build": "npm run build:css && tsx src/build.ts",
        "build:css": "npx tailwindcss -i ./src/styles.css -o ./dist/static/styles.css --minify",
        "check": "biome check --write ./src",
        "format": "biome format --write ./src",
        "lint": "biome lint --write ./src"
    },
    "dependencies": {
        "hono": "^4.0.0",
        "marked": "^11.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@tailwindcss/typography": "^0.5.19",
        "@types/marked": "^5.0.0",
        "@types/node": "^20.0.0",
        "autoprefixer": "^10.4.22",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.18",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0"
    }
}
