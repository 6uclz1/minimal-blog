{
    "name": "minimal-blog",
    "version": "1.0.0",
    "scripts": {
        "dev": "tsx watch src/index.tsx",
        "build": "npm run build:css && tsx src/build.ts",
        "build:css": "npx tailwindcss -i ./src/styles.css -o ./dist/static/styles.css --minify",
        "check": "biome check --write ./src",
        "format": "biome format --write ./src",
        "lint": "biome lint --write ./src"
    },
    "dependencies": {
        "hono": "^4.10.7",
        "marked": "^17.0.1",
        "sanitize-html": "^2.17.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@tailwindcss/cli": "^4.1.17",
        "@tailwindcss/postcss": "^4.1.17",
        "@tailwindcss/typography": "^0.5.19",
        "@types/marked": "^6.0.0",
        "@types/node": "^24.10.1",
        "@types/sanitize-html": "^2.16.0",
        "autoprefixer": "^10.4.22",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.17",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}
